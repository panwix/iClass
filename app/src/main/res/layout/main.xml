<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:name="com.panwix.iclass.Fragments.Fragment_Table_Title"/>

        <fragment
            android:id="@+id/bottom_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:name="com.panwix.iclass.Fragments.Fragment_Bottom_Actiionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/bottom_title">
        <fragment
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.panwix.iclass.Fragments.Fragment_Content"/>
    </ScrollView>
</RelativeLayout>
