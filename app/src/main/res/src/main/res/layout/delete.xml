<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    android:padding="5dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
       >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv5"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="要删除的科目："
            android:layout_weight="1">
        </TextView>

        <EditText
            android:id="@+id/edt1"
            android:alpha="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </EditText>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvWeekStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="要删除的课从第几周开始："
                android:layout_weight="1"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/edtWeedStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvWeekEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="要删除的课在第几周结束："
                android:layout_weight="1"
                android:textColor="#000"/>
            <EditText
                android:id="@+id/edtWeedEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWeek"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="要删除的是星期几的课："
            android:layout_weight="1">
        </TextView>

        <EditText
            android:id="@+id/edtWeek"
            android:alpha="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </EditText>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTime"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="要删除的是第几大节的课："
            android:layout_weight="1">
        </TextView>

        <EditText
            android:id="@+id/edtTime"
            android:alpha="0.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </EditText>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="30dp"
            android:background="@drawable/mybutton"
            android:layout_weight="1">
        </Button>

        <Button
            android:id="@+id/sureBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="30dp"
            android:background="@drawable/mybutton"
            android:layout_weight="1">
        </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>